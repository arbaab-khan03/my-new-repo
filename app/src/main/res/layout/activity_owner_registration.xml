<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/user_name"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter username"
        android:layout_marginTop="10sp"
        android:inputType="textCapWords"
        />
    <EditText
        android:id="@+id/user_mobile_number"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="10sp"
        android:maxLength="10"
        android:hint="Enter your mobile number" />

    <EditText
        android:id="@+id/user_email_id"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10sp"
        android:hint="Enter your email id" />

    <EditText
        android:id="@+id/user_dateOfBirth"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your date of birth"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your Gender"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="12sp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:textSize="20sp">
        <RadioButton android:id="@+id/user_option_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Male"
           />
        <RadioButton android:id="@+id/user_option_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Female"
           />
    </RadioGroup>
    <EditText
        android:id="@+id/user_city"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:layout_marginTop="10sp"
        android:hint="Enter your city" />

    <EditText
        android:id="@+id/user_state"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select your State"
        android:layout_marginTop="10sp"
        android:inputType="textCapWords"
        />

    <EditText
        android:id="@+id/user_pincode"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter your pincode"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/user_password"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:layout_marginTop="10sp"/>
    <EditText
        android:id="@+id/user_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm your password"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:layout_marginTop="10sp"
        />

    <Button
        android:id="@+id/user_sign_up"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:text="Sign Up" />

    <Button
        android:id="@+id/show_table1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:onClick="showTable1"
        android:text="show users Table" />

    <Button
        android:id="@+id/show_table2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:onClick="showTable2"
        android:text="show cars Table" />

</LinearLayout>
</ScrollView>